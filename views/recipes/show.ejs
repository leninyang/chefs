<!DOCTYPE html>
<!-- ====================== -->
<!-- Recipes SHOW PAGE -->
<!-- ====================== -->
<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <% include ../partials/nav %>
    <h1>Recipes Show Page</h1>
    <h2><%=recipe.title%></h2>
    <small>by: <a href="/users/<%=user._id%>"><%=user.username%></a></small> <!-- Display Author's Articles With Links On Author Show Page -->
    <img src="<%=recipe.img%>">
    <h3><%=recipe.description%></h3>
    <section>
      <% if (currentUser) { %>
        <form action="/recipes/<recipe._id?_method=DELETE" method="POST">
          <input type="submit" value="Delete Recipe">
        </form>
      <% } %>
    </section>
    <section>
      <a href="/recipes/<%=recipe._id%>/edit">Edit Recipe</a>
    </section>
  </body>
</html>
