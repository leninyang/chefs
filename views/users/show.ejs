<!DOCTYPE html>
<!-- ====================== -->
<!-- USERS SHOW PAGE -->
<!-- ====================== -->
<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <section>
    <% include ../partials/nav %>
    </section>
    <header class="container">
      <section class="center-align home-content">
        <h1>
          Check out what <%=user.username%>'s made!
        </h1>
        <section class="dlt-btn">
          <a class="btn" href="/users/<%=user._id%>/edit">Edit Account</a>
        </section>
        <section class="dlt-btn">
          <form action="/users/<%=user._id%>?_method=DELETE" method="POST">
            <input class="btn" type="submit" value="Delete Account"/>
          </form>
        </section>
      </section>
      <hr>
    </header>

    <!-- <% for (var i = 0; i < user.recipes.length; i++) { %>
    <img src="<%=user.recipes[i].img%>" alt="">
    <% } %> -->
    <section class="card-container container">
        <% for(var i = 0; i < user.recipes.length; i++) { %>
        <div class="recipe-cards">
          <div class="row">
            <div class="col s12">
              <div class="card small">
                <div class="card-image">
                  <img src="<%=currentUser.recipes[i].img%>">
                  <span class="card-title"><%=currentUser.recipes[i].title%></span>
                </div>
                <div class="card-content">
                  <p><%=currentUser.recipes[i].description%></p>
                </div>
                <div class="card-action">
                  <a href="/recipes/<%=currentUser.recipes[i]._id%>">Read...</a>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% } %>
    </section>
